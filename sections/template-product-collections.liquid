<script>
    const pcListItems = document.querySelectorAll(".pc_ur_body_list_box > li")
  pcListItems.forEach((listItem) => {
    listItem.addEventListener("mousemove", (event) => {
        const { offsetX, offsetY } = event;
  
        const xPercent = (offsetX / listItem.clientWidth) * 100;
        const yPercent = (offsetY / listItem.clientHeight) * 100;
  
        console.log(`X: ${xPercent.toFixed(2)}%, Y: ${yPercent.toFixed(2)}%`);
    })
  })
</script>