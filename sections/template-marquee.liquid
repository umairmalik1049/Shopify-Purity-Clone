<style>
  .marquee-banner {
    background-color: #f2efe6;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
    overflow: hidden;
    white-space: nowrap;
  }

  .marquee {
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
  }

  .marquee__inner {
    display: flex;
    width: max-content;
    animation: marqueeMove 25s linear infinite;
  }

  /* Pause on hover */
  .marquee__inner:hover {
    animation-play-state: paused;
  }

  .marquee__content {
    display: flex;
    align-items: center;
    list-style: none;
    gap: 120px;
    margin: 0;
    padding: 20px 60px;
  }

  .marquee__content li {
    font-size: 16px;
    color: #111;
    position: relative;
    white-space: nowrap;
    position: relative;
  }

  /* Bullet separator */
  .marquee__content li::before {
    content: "";
    position: absolute;
    width: 6px;
    height: 6px;
    top: 50%;
    left: -25%;
    border-radius: 24px;
    transform: translateY(-50%);
    background-color: black;
  }

  /* Animation (moves continuously left-to-right) */
  @keyframes marqueeMove {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>

